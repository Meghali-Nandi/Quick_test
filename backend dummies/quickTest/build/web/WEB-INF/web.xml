<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <listener-class>
             com.controller.quickTest.initializeEverything
        </listener-class>
    </listener>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>testInteract</servlet-name>
        <servlet-class>com.controller.quickTest.testInteract</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>com.controller.quickTest.loginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerController</servlet-name>
        <servlet-class>com.controller.quickTest.registerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.businessLogic.quickTest.logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerController</servlet-name>
        <url-pattern>/registerController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>studentDash</servlet-name>
        <jsp-file>/studentDash.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentDash</servlet-name>
        <url-pattern>/studentDash</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>teacherDash</servlet-name>
        <jsp-file>/teacherDash.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>teacherDash</servlet-name>
        <url-pattern>/teacherDash</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>testInteract</servlet-name>
        <url-pattern>/testInteract</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
